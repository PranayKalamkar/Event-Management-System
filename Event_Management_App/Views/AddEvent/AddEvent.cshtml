                                <input id="u_Location" type="text" asp-for="AddEventModel.Location" class="form-control" autocomplete="off" required />
                            </div>
                            <span asp-validation-for="AddEventModel.Location" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="Capacity" class="form-label">Capacity : </label>
                                <input id="u_Capacity" type="text" asp-for="AddEventModel.Capacity" class="form-control" autocomplete="off" required />
                            </div>
                            <span asp-validation-for="AddEventModel.Capacity" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="Amount" class="form-label">Amount : </label>
                                <input id="u_Amount" type="text" asp-for="AddEventModel.Amount" class="form-control" autocomplete="off" required />
                            </div>
                            <span asp-validation-for="AddEventModel.Amount" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="Description" class="form-label">Description : </label>
                                <input id="u_Description" type="text" asp-for="AddEventModel.Description" class="form-control" autocomplete="off" required />
                            </div>
                            <span asp-validation-for="AddEventModel.Description" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="Status" class="form-label">Status : </label>
                                <input id="u_Status" type="text" asp-for="EventStatusModel.Status" class="form-control" autocomplete="off" required />
                            </div>
                            <span asp-validation-for="EventStatusModel.Status" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="Address" class="form-label">Address : </label>
                                <input id="u_Address" type="text" asp-for="AddEventModel.Address" class="form-control" autocomplete="off" required />
                            </div>
                            <span asp-validation-for="AddEventModel.Address" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="Contact" class="form-label">Contact : </label>
                                <input id="u_Contact" type="text" asp-for="AddEventModel.Contact" class="form-control" autocomplete="off" maxlength="10" required />
                            </div>
                            <span asp-validation-for="AddEventModel.Contact" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="ImageFile" class="form-label">Venue : </label>
                                <input id="updateImageFile" type="file" name="ImageFile" class="form-control" onchange="previewImage(this)" autocomplete="off" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3" style="display: flex; flex-direction: column;">
                                <img id="imagePreviewUpdate" src="#" alt="Image Preview" style="max-width: 30%; max-height: 150px; margin-top: 10px; display: none;">
                            </div>
                        </div>
                    </div>

                </form>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" onclick="updateAddEvent()" class="btn btn-success">Save changes</button>
            </div>

        </div>
    </div>
</div>

