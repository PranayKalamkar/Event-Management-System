<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Event_Management_App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>

    @* <link rel="stylesheet" href="~/css/DashboardStyles.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="~/css/AdminLayout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Event_Management_App.styles.css" asp-append-version="true" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/feather-icons/4.29.1/feather.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.min.css" />
    @* <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script> *@

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    @RenderSection("Styles", required: false)

</head>
<body class="app">

    <!-- SIDEBAR -->
    <section id="sidebar">
        <a href="#" class="brand">
            <i class='bx bxs-smile'></i>
            @* <img src="/images/kanasu.jpg" alt="kanasu" width="40px" height="40px" style="border-radius: 50px;" /> *@
            <span class="text">Kanasu</span>
        </a>
        <ul class="side-menu top">
            <li>
                <a asp-controller="AdminDashboard" asp-action="Dashboard">
                    <i class='bx bxs-dashboard'></i>
                    <span class="text">Dashboard</span>
                </a>
            </li>
            <li>
                <a asp-controller="Admin" asp-action="Admin">
                    <i class='bx bx-building-house'></i>
                    <span class="text">Admin</span>
                </a>
            </li>
            <li>
                <a asp-controller="Admin_User" asp-action="Admin_User">
                    <i class='bx bx-user'></i>
                    <span class="text">User</span>
                </a>
            </li>
            <li>
                <a asp-controller="AddEvent" asp-action="AddEvent">
                    <i class='bx bx-book-open'></i>
                    <span class="text">Event Categories</span>
                </a>
            </li>
            <li>
                <a asp-controller="Admin_CustomerBooking" asp-action="Admin_CustomerBooking">
                    <i class='bx bx-cart'></i>
                    <span class="text">Customer Booking</span>
                </a>
            </li>
            <li>
                <a asp-controller="RequestedEvents" asp-action="RequestedEvents">
                    <i class='bx bx-calendar-edit'></i>
                    <span class="text">Requested Events</span>
                </a>
            </li>
            <li>
                <a asp-controller="BookedEvents" asp-action="BookedEvents">
                    <i class='bx bx-calendar-check'></i>
                    <span class="text">Booked Events</span>
                </a>
            </li>
            <li>
                <a asp-controller="AnalyticsReports" asp-action="AnalyticsReports">
                    <i class='bx bx-bar-chart-alt'></i>
                    <span class="text">Analytics & Reports</span>
                </a>
            </li>
            <li>
                <a asp-controller="Message" asp-action="Message">
                    <i class='bx bx-chat'></i>
                    <span class="text">Message</span>
                </a>
            </li>
            <li>
                <a asp-controller="Team" asp-action="Team">
                    <i class='bx bxl-microsoft-teams'></i>
                    <span class="text">Teams</span>
                </a>
            </li>
        </ul>
        <ul class="side-menu">
            <li>
                <a asp-controller="Setting" asp-action="Setting">
                    <i class='bx bxs-cog'></i>
                    <span class="text">Settings</span>
                </a>
            </li>
            <li>
                <a asp-controller="Login" asp-action="Login" class="logout">
                    <i class='bx bxs-log-out-circle'></i>
                    <span class="text">Logout</span>
                </a>
            </li>
        </ul>
    </section>
    <!-- SIDEBAR -->

    <section id="content">
        <!-- NAVBAR -->
        <nav>
            <i class='bx bx-menu'></i>
            <a href="#" class="nav-link">Categories</a>
            <form action="#">
                <div class="form-input">
                    <input type="search" placeholder="Search...">
                    <button type="submit" class="search-btn"><i class='bx bx-search'></i></button>
                </div>
            </form>
            <input type="checkbox" id="switch-mode" hidden>
            <label for="switch-mode" class="switch-mode"></label>
            <a href="#" class="notification">
                <i class='bx bxs-bell'></i>
                <span class="num">8</span>
            </a>
            <a href="#" class="profile">
                <img src="/images/jason.jpg">
            </a>
        </nav>
        <!-- NAVBAR -->
        <!-- MAIN -->
        <main>
            @RenderBody()
        </main>
        <!-- MAIN -->
    </section>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>
    <script src="~/js/charts.js" asp-append-version="true"></script>

    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/feather-icons/4.29.1/feather.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/4.4.1/chart.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>